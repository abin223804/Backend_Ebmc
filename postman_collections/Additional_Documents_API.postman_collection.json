    "item": [
        {
            "name": "Upload Additional Document",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{userAccessToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "file",
                            "type": "file",
                            "src": []
                        },
                        {
                            "key": "profileId",
                            "value": "{{profileId}}",
                            "description": "ObjectId of the Individual or Corporate profile",
                            "type": "text"
                        },
                        {
                            "key": "profileType",
                            "value": "Individual",
                            "description": "Either 'Individual' or 'Corporate'",
                            "type": "text"
                        },
                        {
                            "key": "uploadDocumentType",
                            "value": "Profile based",
                            "description": "Type of upload (e.g., 'Profile based')",
                            "type": "text"
                        },
                        {
                            "key": "documentType",
                            "value": "Passport copy",
                            "description": "One of: Passport copy, Nationality ID copy, Bank statement, Withdrawal slip, Invoice, Others",
                            "type": "text"
                        },
                        {
                            "key": "customerName",
                            "value": "John Doe",
                            "description": "Customer name snapshot",
                            "type": "text"
                        },
                        {
                            "key": "transactionNumber",
                            "value": "TXN123456",
                            "description": "Optional transaction number",
                            "type": "text"
                        },
                        {
                            "key": "remarks",
                            "value": "Additional remarks here",
                            "description": "Optional remarks",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "{{baseUrl}}/additional-documents/upload",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "additional-documents",
                        "upload"
                    ]
                },
                "description": "Upload an additional document for a profile. Requires authentication and a valid profile ID."
            },
